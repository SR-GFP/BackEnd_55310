    <h1>Administrar Productos</h1>
    <button id="get-products-btn">Obtener Productos</button>
    <button id="update-products-btn">Actualizar Productos</button>
    <button id="create-products-btn">Crear Producto</button>
    <button id="delete-products-btn">Eliminar Producto</button>

    <div id="products-container" style="display: none;">
        <!-- Contenedor para mostrar los productos -->
    </div>

    <div id="update-form-container" style="display: none;">
    <h2>Actualizar Producto</h2>
    <form id="update-form">
        <label for="product-id">ID del Producto:</label>
        <input type="text" id="product-id" name="product-id" required>
        
        <label for="title">Título:</label>
        <input type="text" id="title" name="title" required>
        
        <label for="description">Descripción:</label>
        <textarea id="description" name="description" required></textarea>
        
        <label for="code">Código:</label>
        <input type="text" id="code" name="code" required>
        
        <label for="price">Precio:</label>
        <input type="number" id="price" name="price" step="0.01" required>
        
        <label for="status">Estado:</label>
        <select id="status" name="status" required>
            <option value="available">Disponible</option>
            <option value="out_of_stock">Agotado</option>
        </select>
        
        <label for="stock">Stock:</label>
        <input type="number" id="stock" name="stock" required>
        
        <label for="thumbnails">Imágenes:</label>
        <input type="text" id="thumbnails" name="thumbnails" required>
        
        <button type="submit">Actualizar</button>
    </form>
</div>

<div id="create-form-container" style="display: none;">
    <h2>Crear Nuevo Producto</h2>
    <form id="create-form">
        <label for="title">Título:</label>
        <input type="text" id="title" name="title" required>
        
        <label for="description">Descripción:</label>
        <textarea id="description" name="description" required></textarea>
        
        <label for="code">Código:</label>
        <input type="text" id="code" name="code" required>
        
        <label for="price">Precio:</label>
        <input type="number" id="price" name="price" step="0.01" required>       
                
        <label for="stock">Stock:</label>
        <input type="number" id="stock" name="stock" required>
        
        <label for="thumbnails">Imágenes:</label>
        <input type="text" id="thumbnails" name="thumbnails">
        
        <button type="submit">Crear</button>
    </form>
</div>

<div id="delete-form-container" style="display: none;">
    <h2>Eliminar Producto</h2>
    <form id="delete-form">
        <label for="delete-product-id">ID del Producto a Eliminar:</label>
        <input type="text" id="delete-product-id" name="delete-product-id" required>
        
        <button type="submit">Eliminar</button>
    </form>
</div>



    <script src="/JS/homeProducts.js"></script>
</body>
</html>


