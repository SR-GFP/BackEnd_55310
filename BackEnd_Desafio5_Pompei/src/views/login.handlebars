<div class="container align-self-center">

  <div class="row justify-content-center">
    <div class="col-md-6">
      <ul class="nav nav-pills">
        <li class="nav-item">
          <button class="nav-link active" id="register-tab">Registrate</button>
        </li>
        <li class="nav-item">
          <button class="nav-link" id="login-tab">Log-in</button>
        </li>
      </ul>
      

      {{!-- Register Contenedor   --}}
      <div id="register-container-form" >
        {{!-- Register Formulario --}}
        <form id="register-form">
          <div class="mb-3 form-group">
            <label for="name-register"  class="form-label">Nombre</label>
            <input 
              type="text"
              id="name-register" 
              class="form-control" 
              name="name" 
              placeholder="Ingresa tu nombre"
            />
          </div>
          <div class="mb-3 form-group">
            <label for="lastName-register" class="form-label">Apellido</label>
            <input 
            type="text" 
            class="form-control" 
            name="lastName"  
            id="lastName-register"
            placeholder="Ingresa tu apellido"
            />
          </div>
          <div class="mb-3 form-group">
            <label for="email-register" class="form-label">Email</label>
            <input 
              type="email" 
              class="form-control" 
              name="email"
              id="email-register" 
              placeholder="Ingresa tu email"
            />
          </div>
          <div class="mb-3 form-group">
            <label for="password-register"  class="form-label">Contraseña</label>
            <input 
              type="password" 
              class="form-control" 
              name="password" 
              id="password-register"
              placeholder="Ingresa tu contraseña"
            />
          </div>
          <button type="submit" class="btn btn btn-outline-success btn-lg">Registrarse</button>
        </form>
      </div>

      {{!-- Log-in Contenedor   --}}
      <div id="login-container-form" style="display: none">
        {{!-- Log-in Formulario --}}
        <form  id="login-form">
          <div class="mb-3 form-group">
            <label for="email-login" class="form-label">Email</label>
            <input 
              type="email" 
              class="form-control" 
              name="email"
              id="email-login"
              placeholder="Ingresa tu email"
            />
          </div>
          <div class="mb-3 form-group">
            <label for="password-login" class="form-label">Contraseña</label>
            <input 
              type="password" 
              class="form-control" 
              name="password"
              id="password-login"
              placeholder="Ingresa tu contraseña"
            />
          </div>
          <button type="submit" class="btn btn btn-outline-success btn-lg">Iniciar Sesión</button>
        </form>
      </div>      
    <div id="response-container" class="container" style="display: none;">
      <p id="response-mensaje"></p>      
    </div>
    </div>
  </div>
</div>

<script
  src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-alpha1/dist/js/bootstrap.min.js"
></script>
<script src="/JS/login.js"></script>